<Page loaded="onLoaded">
    <ActionBar>
        <GridLayout rows="*" columns="auto, *">
            <Label row="0" col="0" tap="{{ goBack }}" class="fa actionBarBackButton" text="&#xf060;" />
            <Label row="0" col="1" class="helFont actionBarText" text="  Register" />
        </GridLayout>
    </ActionBar>
    <StackLayout class="form">
    <Label class="h1" text="Enter your email to reset your password" textWrap="true"/>
        <StackLayout class="inputContainer">
            <TextField class="input" text="{{ userEmail }}" hint="Email"/>
            <StackLayout class="hr-light"></StackLayout>
        </StackLayout>

        <StackLayout>
            <Button class="btn btn-primary" text="Continue" tap="{{ resetPassword }}"/>
        </StackLayout>
    </StackLayout>
</Page>